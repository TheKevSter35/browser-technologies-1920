<!DOCTYPE html>
<html lang="en">


    <%- include ('../partials/head.ejs') %>
<body id="finaldesign">
    <%- include ('../partials/nav.ejs') %>
    <section>
        <h1>Your custom nerdy T-shirt</h1>
    </section>
    <div class="shirteditor">
        <aside>
            <section>
                <% if(queries.textColor == "#fff") { %>
                <h2 id=textCanvas style="color:#fff;">

                    <%= queries.shirtText %>

                </h2>
                <% } else  { %>
                <h2 id=textCanvas style="color:#000;">

                    <%= queries.shirtText %>

                </h2>
                <% } %>



                <% if(queries.shirtColor == "yellowshirt") { %>
                <img id='shirtcanvas' src="../source/pictures/shirts/yellowshirt.jpg" alt="shirt canvas">
                <% } else if(queries.shirtColor == "redshirt")  { %>
                <img id='shirtcanvas' src="../source/pictures/shirts/redshirt.jpg" alt="shirt canvas">
                <% } else if(queries.shirtColor == "blueshirt")  { %>
                <img id='shirtcanvas' src="../source/pictures/shirts/blueshirt.jpg" alt="shirt canvas">
                <% } else  { %>
                <img id='shirtcanvas' src="../source/pictures/shirts/whiteshirt.jpg" alt="shirt canvas">
                <% } %>



            </section>
        </aside>

        <main>
            <section>
                    <ul>
                        <li>
                            <h3>Custom text</h3>
                            <p><%= queries.shirtText %></p>
                        </li>
                        
                        <li>
                            <h3>Selected font</h3>
                            <p></p>

                            <% if(queries.textFont == "Streamstar") { %>
                                <p style="font-family: Streamster;">Streamster</p>
                                <script>
                                    document.getElementById('textCanvas').style.fontFamily = ('Streamster')
                                </script>
                            
                                <% } else if(queries.textFont == "Nixies") { %>
                                    <p style="font-family: Nixies;">Nixies</p>
                                    <script>
                                        document.getElementById('textCanvas').style.fontFamily = ('Nixies')
                                    </script>
                            
                                <% } else  { %>
                                    Default
                                    <script>
                                        document.getElementById('textCanvas').style.fontFamily = ('Raleway')
                                    </script>
                                <% } %>
                        </li>

                        <li>
                            <h3>Selected text color</h3>
                            

                            <% if(queries.textColor == "#fff") { %>
                                <p>White</p>
                                <% } else  { %>
                                    <p>Black</p>
                                <% } %>
                        </li>
                        
                        <li>
                            <h3>Selected shirt color</h3>
                            


                            <% if(queries.shirtColor == "yellowshirt") { %>
                                <p>Yellow</p>
                                <% } else if(queries.shirtColor == "redshirt")  { %>
                                <p>Red</p>
                                <% } else if(queries.shirtColor == "blueshirt")  { %>
                                <p>Blue</p>
                                <% } else  { %>
                                    <p>White</p>
                                <% } %>
                        </li>
                    </ul>



            </section>
        </main>
       
    </div>
<div class="settings"><p><button id="printsheet">Print</button><button>Save</button></p></div>

    <script src="js/printscript.js"></script>


</body>


</html>